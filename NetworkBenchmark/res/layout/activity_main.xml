<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="*"  
    android:stretchColumns="*"
    android:background="#ffffff" >
    
    <TableRow  
        android:id="@+id/tableRow4"  
        android:layout_height="wrap_content"  
        android:layout_width="match_parent"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backgroundword1"
            android:layout_span="2" />
        
    </TableRow>  

    <TableRow  
        android:id="@+id/tableRow1"  
        android:layout_height="wrap_content"  
        android:layout_width="match_parent"
        android:paddingTop="30dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip">

        <Button
            android:id="@+id/button1"
            android:layout_width="90dip"
            android:layout_height="120dip"
            android:background="@drawable/speedtest_button"
            android:clickable="true"
            android:onClick="calcPerfMeasure" />
        
        <Button
        	android:id="@+id/button3"
        	android:layout_width="90dip"
        	android:layout_height="120dip"
        	android:onClick="viewPerfMeasure"
        	android:clickable="true"
        	android:background="@drawable/result_button" />
        
        <Button
       		android:id="@+id/button2"
        	android:layout_width="90dip"
        	android:layout_height="120dip"
        	android:background="@drawable/save_button"
        	android:clickable="true"
        	android:onClick="savePerfMeasure" />
        
    </TableRow>
    
    <TableRow  
        android:id="@+id/tableRow2"  
        android:layout_height="wrap_content"  
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingTop="10dip">
    
        <Button
        	android:id="@+id/button4"
        	android:layout_width="90dip"
        	android:layout_height="120dip"
        	android:background="@drawable/history_button"
        	android:clickable="true"
        	android:onClick="viewPerfHistory" />
        
        <Button
        	android:id="@+id/button5"
        	android:layout_width="90dip"
        	android:layout_height="120dip"
        	android:background="@drawable/ping_button"
        	android:clickable="true"
        	android:onClick="pingFunction" />
        
        <Button
        	android:id="@+id/button6"
        	android:layout_width="90dip"
        	android:layout_height="120dip"
        	android:background="@drawable/map_button"
        	android:clickable="true"
        	android:onClick="viewmap" />
        
    </TableRow>
    
    <TableRow  
        android:id="@+id/tableRow3"  
        android:layout_height="wrap_content"  
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:paddingTop="10dip">
        
        <Button
        	android:id="@+id/button7"
        	android:layout_width="90dip"
        	android:layout_height="120dip"
        	android:background="@drawable/help_button"
        	android:onClick="helpFunction" 
        	android:clickable="true"
        	android:layout_span="1" />
        
    </TableRow> 
    
    
</TableLayout>